@model MvcVote.Models.Voter;
@{
    ViewData["Title"] = "Prijava/Пријава";
}
    <div class="container">
        <div class="row">
            <div class="col-xs-0 col-sm-0 col-lg-3 col-md-3"></div>

            <div class="text-center col-xs-12 col-sm-12 col-lg-6 col-md-6">
                <h2>Prijava / Пријава</h2>
                <form asp-controller="Vote" asp-action="SignIn" method="post">
                    <div class="form-group">
                        <label asp-for="Name"></label>
                        <input type="text" class="form-control" asp-for="Name" required oninvalid="this.setCustomValidity('Molimo, upišite Vaše ime ovdje / Молимо, упишите Ваше име овдје')" oninput="this.setCustomValidity('')">
                    </div>
                    <div class="form-group">
                        <label asp-for="Surname"></label>
                        <input type="text" class="form-control" asp-for="Surname" required oninvalid="this.setCustomValidity('Molimo, upišite Vaše prezime ovdje / Молимо, упишите Ваше презиме овдје')" oninput="this.setCustomValidity('')">
                    </div>
                    <div class="form-group">
                        <label asp-for="Id"></label>
                        <input type="text" class="form-control" asp-for="Id" required oninvalid="this.setCustomValidity('Molimo, upišite Vaš JMBG ovdje / Молимо, упишите Ваш ЈМБГ овдје')" oninput="this.setCustomValidity('')">
                    </div>
                    <button type="submit" class="btn btn-primary btn-lg">Potvrdi / Потврди</button>
                </form>
            </div>

            <div class="col-xs-0 col-sm-0 col-lg-3 col-md-3"></div>
        </div>
    </div>


