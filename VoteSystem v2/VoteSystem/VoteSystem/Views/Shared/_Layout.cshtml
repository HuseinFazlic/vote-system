<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
</head>
<body>
    @{ 
        string language = "";
        if (Request.Cookies["language"] != null) {
            language = Request.Cookies["language"].Value;        
        }
    }
    <nav class="navbar navbar-default navbar-fixed-top">
        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/">Home</a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    @switch (language)
                    {
                        case "ba":
                            <li><a class="navbar-brand" href="/Person">Glasanje</a></li>
                            break;
                        case "bac":
                            <li><a class="navbar-brand" href="/Person">Гласање</a></li>
                            break;
                        case "en":
                            <li><a class="navbar-brand" href="/Person">Vote</a></li>
                            break;
                        default:
                            <li><a class="navbar-brand" href="/Person">Glasanje</a></li>
                            break;
                    }
                </ul>
                
                <ul class="nav navbar-nav navbar-right">
                    <li class="dropdown">
                        @switch (language)
                        {
                            case "ba":
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Jezik (@language) <span class="caret"></span></a>
                                break;
                            case "bac":
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Језик (@language) <span class="caret"></span></a>
                                break;
                            case "en":
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Language (@language) <span class="caret"></span></a>
                                break;
                            default:
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Jezik (ba) <span class="caret"></span></a>
                                break;
                        }

                    <ul class="dropdown-menu">
                        @switch (language)
                        {
                            case "ba":
                                <li><a href="/Home/ChangeLanmguage?id=ba">BiH latinica</a></li>
                                <li><a href="/Home/ChangeLanmguage?id=bac">BiH cirilica</a></li>
                                <li role="separator" class="divider"></li>
                                <li><a href="/Home/ChangeLanmguage?id=en">Engleski</a></li>
                                break;
                            case "bac":
                                <li><a href="/Home/ChangeLanmguage?id=ba">БиХ Латин</a></li>
                                <li><a href="/Home/ChangeLanmguage?id=bac">БиХ ћирилица</a></li>
                                <li role="separator" class="divider"></li>
                                <li><a href="/Home/ChangeLanmguage?id=en">Eнглески</a></li>
                                break;
                            case "en":
                                <li><a href="/Home/ChangeLanmguage?id=ba">BiH Latin</a></li>
                                <li><a href="/Home/ChangeLanmguage?id=bac">BiH Cyrillic</a></li>
                                <li role="separator" class="divider"></li>
                                <li><a href="/Home/ChangeLanmguage?id=en">English</a></li>
                                break;
                            default:
                                <li><a href="/Home/ChangeLanmguage?id=ba">BiH latinica</a></li>
                                <li><a href="/Home/ChangeLanmguage?id=bac">BiH cirilica</a></li>
                                <li role="separator" class="divider"></li>
                                <li><a href="/Home/ChangeLanmguage?id=en">Engleski</a></li>
                                break;
                        }

                    </ul>
                    </li>
                    </ul>
            </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
    </nav>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>
